<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.RegisterPetActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/item_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/register_pet_btn_add_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/register_pet_tv_pet_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/hsvillige"
            android:text="반려동물 등록번호"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_btn_add_profile_img"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/register_pet_edit_pet_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#DFDFDF"
            android:fontFamily="@font/hsvillige"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_tv_pet_number"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/register_pet_tv_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hsvillige"
            android:text="반려동물 이름"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_edit_pet_number"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/register_pet_edit_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#DFDFDF"
            android:fontFamily="@font/hsvillige"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_tv_profile_name"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/register_pet_tv_profile_breeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hsvillige"
            android:text="반려동물 품종"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_edit_pet_name"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/register_pet_tv_pet_breeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/tv_underline_gray"
            android:fontFamily="@font/hsvillige"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_tv_profile_breeds"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/register_pet_tv_profile_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hsvillige"
            android:text="반려동물 생년월일"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_tv_pet_breeds"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/register_pet_tv_pet_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/tv_underline_gray"
            android:fontFamily="@font/hsvillige"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_pet_tv_profile_birth"/>

        <RadioGroup
            android:id="@+id/register_pet_rb_gender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/teduri_bg"
            android:checkedButton="@+id/offer"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/register_pet_tv_pet_birth">

            <RadioButton
                android:id="@+id/register_pet_rb_gender_female"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_border_bg_primary"
                android:button="@null"
                android:checked="true"
                android:fontFamily="@font/hsvillige"
                android:gravity="center"
                android:text="여아"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textIsSelectable="true" />

            <RadioButton
                android:id="@+id/register_pet_rb_gender_male"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:fontFamily="@font/hsvillige"
                android:gravity="center"
                android:text="남아"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </RadioGroup>

        <Button
            android:id="@+id/register_pet_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btn_abled_bg"
            android:fontFamily="@font/hsvillige"
            android:gravity="center"
            android:text="등록"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>